// Test various language features
const PI: number = 3.14159;
mut counter: number = 0;

def factorial(n: number) -> number {
    if (n <= 1) {
        return 1;
    }
    return n * factorial(n - 1);
}

def process_array(arr: Array<number>) -> number {
    mut sum: number = 0;
    for (num in arr) {
        sum = sum + num;
    }
    return sum;
}

def main() -> void {
    mut result: number = factorial(5);
    counter = result;
    
    mut numbers: Array<number> = [1, 2, 3, 4, 5];
    mut total: number = process_array(numbers);
    
    // Test if-else
    if (total > 10) {
        counter = counter + 1;
    } else {
        counter = counter - 1;
    }
    
    // Test while loop
    while (counter < 20) {
        counter = counter + 1;
    }
}

main();
